
<% layout('layouts/boilerplate')%>
    
    
<div class="text-center bg-info">
    <h2>EDITAR DETALLES ALUMNO</h2>
</div>
<!-- DEBEMOS ITERAR SOBRE LOS RESULTADOS DEL FOREACH PARA EXTRAER LOS DATOS DEL ALUMNO O EMPRESA A PARTIR DE SU ID -->

    <div class="container">
        <% for (let alumno of editarDetallesAlumno)  {%> 
            <form action="/alumnos/editaralumno/<%=alumno.id%>" method="POST">
            <div class="row mb-3"> 
            <div class=" col-md-4">
                <label for ="cursoAl" > Curso </label>
                <input type="text" id="cursoAl" class="form-control"  value="<%=alumno.cursoAl%>" name="cursoAl">
            </div>

            <div class="col-md-4">
                <label for ="nombreAl" > Nombre </label>
                <input type="text" id="nombreAl" class="form-control" value="<%=alumno.nombreAl%>" name="nombreAl"> 
            </div>
            <div class=" col-md-4">
                <label for ="localidadAl" > Localidad </label>
                <input type="text" id="localidadAl" class="form-control" value="<%=alumno.localidadAl%>" name="localidadAl">
            </div>
        </div>
        <div class="row mb-3"> 
            <div class="form-group col-md-4">
                <label for ="emailAl" > Email </label>
                <input type="text" id="emailAl" class="form-control" " value="<%=alumno.emailAl%>" name="emailAl">
            </div>
            <div class="form-group col-md-4">
                <label for ="movilAl"> Telefono </label> 
                <input type="text" id="movilAl" class="form-control"  value="<%=alumno.movilAl%>" name="movilAl">
            </div>
            <div class="form-group col-md-4">
                <label for ="practicas"> Practicas </label>
                <input type="text" id="practicas" class="form-control"  value="<%=alumno.practicas%>" name="practicas">
            </div>
        </div>
        
        <div class="row mb-3">                
            <div class="form-group col-md-4">
                <label for ="contactoEmp" > Contacto_Emp </label>
                <input type="text" id="contactoEmp" class="form-control"  value="<%=alumno.contactoEmp%>" name="contactoEmp">
            </div>
            
            <div class="form-group col-md-4">
                <label for ="empresaAl"> Empresa </label>
                <input type="text" id="empresaAl" class="form-control"  value="<%=alumno.empresaAl%>" name="empresaAl">
            </div>
        </div>
        <div class="row mb-3 form-group">
            <label for="observaciones">OBSERVACIONES</label>
            <textarea name="OBSERVACIONES" id="observaciones" cols="30" rows="5" ><%=alumno.OBSERVACIONES%></textarea> 
        </div>

        <% } %>
    <div>
        <button class="btn btn-outline-danger">EDITAR DETALLES</button>    
</form>    
<button class="btn btn-outline-success" onclick="window.location='/'">Volver al Menu</button>

</div>