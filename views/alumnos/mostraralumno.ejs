<% layout('layouts/boilerplate')%>
    
    
        <div class="text-center bg-warning">
            <h2>DETALLES ALUMNO</h2>
        </div>
    <!-- DEBEMOS ITERAR SOBRE LOS RESULTADOS DEL FOREACH PARA EXTRAER LOS DATOS DEL ALUMNO O EMPRESA A PARTIR DE SU ID -->
       <div class="container">
         <% for (let alumno of detallesAlumno)  {%> 
           
            <div class="row mb-3"> 
                <div class=" col-md-4">
                    <label for ="curso" > Curso </label>
                    <input type="text" id="curso" class="form-control"  value="<%=alumno.cursoAl%>" >
                </div>

                <div class="col-md-4">
                    <label for ="nombreAl" > Nombre </label>
                    <input type="text" id="nombreAl" class="form-control" value="<%=alumno.nombreAl%>"> 
                </div>
                <div class=" col-md-4">
                    <label for ="localidadAl" > Localidad </label>
                    <input type="text" id="localidadAl" class="form-control" value="<%=alumno.localidadAl%>">
                </div>
            </div>
            <div class="row mb-3"> 
                <div class="form-group col-md-4">
                    <label for ="emailAl" > Email </label>
                    <input type="text" id="emailAl" class="form-control" name="emailAl" value="<%=alumno.emailAl%>">
                </div>
                <div class="form-group col-md-4">
                    <label for ="telefonoAl"> Telefono </label> 
                    <input type="text" id="telefonAl" class="form-control" name="movilAl" value="<%=alumno.movilAl%>">
                </div>
                <div class="form-group col-md-4">
                    <label for ="practicas"> Practicas </label>
                    <input type="text" id="practicas" class="form-control" name="practicas" value="<%=alumno.practicas%>">
                </div>
            </div>
            
            <div class="row mb-3">                
                <div class="form-group col-md-4">
                    <label for ="Contacto_Emp" > Contacto_Emp </label>
                    <input type="text" id="contacto_emp" class="form-control" name="contactoEmp" value="<%=alumno.contactoEmp%>">
                </div>
                
                <div class="form-group col-md-4">
                    <label for ="empresa_alumno"> Empresa </label>
                    <input type="text" id="empresa_alumno" class="form-control" name="empresaAl" value="<%=alumno.empresaAl%>">
                </div>
            </div>
            <div class="row mb-3 form-group">
                <label for="observaciones">OBSERVACIONES</label>
                <textarea name="OBSERVACIONES" id="observaciones" cols="30" rows="5" ><%=alumno.OBSERVACIONES%></textarea> 
            </div>
        
        <% } %>
    <div>
        <button class="btn btn-outline-success" onclick="window.location='/'">Volver al Menu</button>

    </div>
    